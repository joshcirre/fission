{
    "name": "joshcirre/fission",
    "type": "project",
    "description": "An opinionated starter kit for building Laravel applications.",
    "keywords": [
        "laravel",
        "framework",
        "starter-kit"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.5",
        "laravel/framework": "^12.0",
        "laravel/prompts": "^0.3",
        "laravel/tinker": "^2.0",
        "livewire/flux": "^2.0",
        "livewire/flux-pro": "^2.0",
        "livewire/livewire": "^4.0@beta",
        "nunomaduro/essentials": "^1.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.4",
        "laravel/boost": "^2.0",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.18",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.0",
        "peckphp/peck": "^0.1.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "rector/rector": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan fission:install"
        ],
        "setup": [
            "composer install",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan fission:install",
            "bun install",
            "bun run build"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "bunx concurrently -k -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail\" \"bun run dev\" --names=server,queue,logs,vite"
        ],
        "lint": [
            "./vendor/bin/pint",
            "bun run lint"
        ],
        "refactor": "./vendor/bin/rector process",
        "fix": [
            "@test:types",
            "@refactor",
            "bun run lint:fix",
            "./vendor/bin/pint"
        ],
        "test:typos": "./vendor/bin/peck",
        "test:lint": [
            "./vendor/bin/pint --test",
            "bun run test:lint"
        ],
        "test:unit": "./vendor/bin/pest --parallel",
        "test:unit:coverage": "./vendor/bin/pest --parallel --coverage",
        "test:types": "./vendor/bin/phpstan analyse --memory-limit=256M",
        "test:refactor": "./vendor/bin/rector process --dry-run",
        "test": [
            "@test:typos",
            "@test:unit",
            "@test:lint",
            "@test:types",
            "@test:refactor"
        ],
        "phpstan": "./vendor/bin/phpstan analyse --memory-limit=256M",
        "phpstan-baseline": "./vendor/bin/phpstan analyse --generate-baseline --memory-limit=256M"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "suggest": {
        "bentoproject/bento": "Adds Bento to your project",
        "filament/filament": "Adds Filament admin panel to your project",
        "spatie/ray": "Adds Spatie Ray for debugging",
        "sentry/sentry-laravel": "Adds Sentry error tracking to your project",
        "pirsch-analytics/laravel": "Adds Pirsch analytics to your project"
    },
    "repositories": {
        "flux-pro": {
            "type": "composer",
            "url": "https://composer.fluxui.dev"
        }
    }
}
